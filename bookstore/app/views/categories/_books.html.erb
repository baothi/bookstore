
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= image_tag  book.cover.url(:medium) %></td>
        <td><%= book.title %></td>
        <td><%= book.author.try(:name) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
